{
  "parser": "@typescript-eslint/parser",
  "parserOptions":  {
    "ecmaVersion":  2018,
    "sourceType":  "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "xo/esnext",
    "xo-lass",
    "xo-typescript",
    "./node_modules/xo/config/plugins.js"
  ],
  "rules": {
    "indent": "off",
    "semi": "off",
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/semi": "off"
  }
}
